<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidDevelopmentGroup7" parent="Base.Theme.AndroidDevelopmentGroup7" />
    <style name="Base.Theme.AndroidDevelopmentGroup7" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_accent_300</item>
        <item name="colorSecondaryVariant">@color/green_500</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/red_600</item>
        <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
        <!--on which they appear.-->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/white</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>

<!--                <item name="android:windowLightStatusBar">true</item>-->
        <!-- Customize your theme here. -->
    </style>
</resources>